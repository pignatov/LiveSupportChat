@{
    ViewBag.Title = "About Us";
}

@section Scripts{
    <script src="@Url.Content("~/Scripts/knockout-1.3.0beta.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/twitterapi.js")" type="text/javascript"></script>
}
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/twitter.css")" />

<h2>@ViewRes.Home.About.AboutUs</h2>
<p>
     We are young motivated team with 10+ years of experience in development of software solutions.
</p>

<p>Drop us a line at <strong>feedback@moplig.com</strong> and tell us what you think.</p>


Follow us on <a href="http://www.twitter.com/moplig">
<img height="15" src="https://twitter-badges.s3.amazonaws.com/twitter-a.png" alt="Follow moplig on Twitter">
</a> or visit our <a href="/blog" rel="me">blog</a>
<div class='tweets'>
    <table width='100%' data-bind="foreach: currentTweets">
        <tr>
            <td><img data-bind='attr: { src: profile_image_url }' /></td>
            <td>
                <a class='twitterUser' data-bind='attr: { href: "http://twitter.com/" + from_user, text: from_user }' href='http://twitter.com/${ from_user }' > </a>
                <span data-bind="text: text"> </span>
                <div class='tweetInfo' data-bind='text: created_at'> </div>
            </td>
        </tr>
    </table>
</div>

<script type="text/javascript">
    var viewModel;

    $(function () {

        viewModel = {
            currentTweets: ko.observableArray([]),
            name: ko.observable()
        };


        ko.dependentObservable(function () {
            twitterApi.getTweetsForUser("moplig", function (data) {
                viewModel.currentTweets(data)
            })
        }, viewModel);

        ko.applyBindings(viewModel);
    });

</script>