<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <meta charset="UTF-8"/>
    <script src="@Url.Content("~/Scripts/modernizr-2.0.6-development-only.js")" type="text/javascript"></script>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/themes/base/jquery-ui.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui.min.js")" type="text/javascript"></script>
    <script type='text/javascript' src="@Url.Content("~/Scripts/jquery.tmpl.js")"></script>  
    <script src="@Url.Content("~/Scripts/knockout-1.3.0beta.js")" type="text/javascript"></script>
     @RenderSection("Scripts", false)

<style>
#support
{
     position:fixed;
     bottom:0px;
     right:0px;
	opacity: .7;
	filter: alpha(opacity=70);
	-ms-filter:"progid:DXImageTransform.Microsoft.Alpha(Opacity=70)";     
	background-color: White;
	-moz-border-top-left-radius: 10px 5px;	
	border-top-left-radius: 10px 5px;
}        

</style>

</head>

<body>
    <div class="page">

        <div id="header" style="height:50px;">
            <div id="title" style="float:left">
                <img src="/images/internet-chat-big.png" alt="Internet chat" /><img src="@Url.Content("~/images/logo.png")" alt="Moplig logo"/>
            </div>

        </div>

        <div id="Navigation">
            @RenderSection("Navigation", false)
        </div>
        <div id="main">
            @RenderBody()
        </div>
        
        <div id="footer">
            <a href="mailto:support@moplig.com">support@moplig.com</a> - Copyright © @DateTime.Today.Year.ToString(). All Rights Reserved.
            - Version: @System.Reflection.Assembly.GetAssembly(typeof(LiveSupport.LiveSupport)).GetName().Version.ToString() 
        </div>
    </div>

    <div id="support">
        <a href="javascript:void(window.open('http://moplig.com/en/Live/Ask?company=moplig','','width=590,height=400,left=0,top=0,resizable=yes,menubar=no,location=no,status=yes,scrollbars=yes'))"> <img src='http://moplig.com/en/Live/Image?company=moplig'></a>
    </div>
</body>
</html>
