<style>
#support
{
     position:fixed;
     bottom:0px;
     right:0px;
    opacity: .7;
    filter: alpha(opacity=70);
    -ms-filter:"progid:DXImageTransform.Microsoft.Alpha(Opacity=70)";     
    background-color: White;
    -moz-border-top-left-radius: 10px 5px;	
    border-top-left-radius: 10px 5px;
}        

</style>

</head>

<body>
    <div class="page">
@functions{
  protected MvcHtmlString CheckSelectedAction(string action, string controller){
    string ctrName = ViewContext.RouteData.Values["controller"].ToString();
      string actionName = ViewContext.RouteData.Values["action"].ToString();      
      
     if (controller.Equals(ctrName, StringComparison.InvariantCultureIgnoreCase) &&
         action.Equals(actionName, StringComparison.InvariantCultureIgnoreCase)){
         return new MvcHtmlString("class='active'");
     }
     else{
         return new MvcHtmlString("");
     }
  }
}


        <div id="header">
            <div id="title" style="float:left">
                <a href="@Url.Content("~")"> <img src="/images/internet-chat-big.png" alt="Internet chat" /><img src="@Url.Content("~/images/logo.png")" alt="Moplig"/></a>
                @if (!Request.IsAuthenticated)
                {
                <h1 style="line-height:normal">@ViewRes.SharedStrings.Title</h1>
                }
            </div>
            
            <div id="logindisplay">
                @Html.Action("LicenseInfo", "Account") &nbsp;
                 @if (Request.IsAuthenticated) {
                     if (User.IsInRole("Supervisor"))
                     {
                         @Html.ActionLink(ViewRes.SharedStrings.Settings, "Index", "Company")
                     }
                      <text>&nbsp;</text> @Html.ActionLink(ViewRes.SharedStrings.MyProfile, "Profile", "Account")

                 }
                 @Html.Partial("_LogOnPartial") &nbsp; @Html.Partial("CultureSwitchControl")

            </div>

            <div id="menucontainer">

                <ul id="menu">

                    <li @CheckSelectedAction("Index", "Home")>@Html.ActionLink(ViewRes.SharedStrings.Home, "Index", "Home")</li>
                    <li @CheckSelectedAction("Features", "Home")>@Html.ActionLink(ViewRes.SharedStrings.Features, "Features", "Home")</li>                        
                    <li @CheckSelectedAction("Index", "Pricing")>@Html.ActionLink(ViewRes.SharedStrings.Pricing, "Index", "Pricing")</li>                        
                    <li @CheckSelectedAction("FAQ", "Home")>@Html.ActionLink(ViewRes.SharedStrings.FAQ, "FAQ", "Home")</li>     
                    @if (Request.IsAuthenticated)
                    {
                        if (User.IsInRole("Supervisor"))
                        {                        
                            <li  @CheckSelectedAction("Index", "Operator")>@Html.ActionLink(ViewRes.SharedStrings.Operators, "Index", "Operator")</li>                        
                            <li @CheckSelectedAction("Index", "Response")>@Html.ActionLink(ViewRes.SharedStrings.Responses, "Index", "Response")</li>                                                
                            <li @CheckSelectedAction("Snippet", "Code")>@Html.ActionLink(ViewRes.SharedStrings.Snippet, "Snippet", "Code")</li>                        
                        }
                        if (User.IsInRole("Operator"))
                        {
                            <li><a href="javascript:void(window.open('@Url.Action("Answer", "Support")','','width=900,height=600,resizable=yes,menubar=yes,location=no,status=yes,scrollbars=yes'))">@ViewRes.SharedStrings.Support</a></li>
                        }
                    }
                    <li @CheckSelectedAction("About", "Home")>@Html.ActionLink(ViewRes.SharedStrings.About, "About", "Home")</li>
                </ul>

            </div>
        </div>

        <div id="Navigation">
            @RenderSection("Navigation", false)
        </div>
        <div id="main">
            @RenderBody()
        </div>
        
        <div id="footer">
            <script type="text/javascript">

                var _mop = _mop || [];
                _mop.push(['company', 'moplig']);

                (function () {
                    var mo = document.createElement('script'); mo.type = 'text/javascript'; mo.async = true;
                    mo.src = 'https://moplig.com/en/Live/Script';
                    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(mo, s);
                })();

            </script>

            <iframe src='https://moplig.com/en/Live/Presence?company=moplig' style='visibility:hidden;display:none'></iframe>
            <a href="mailto:support@moplig.com">support@moplig.com</a> - @ViewRes.SharedStrings.Copyright © @DateTime.Today.Year.ToString() <a href="http://moplig.com" title="Live support chat">Live Support chat</a>.
            - Version: @System.Reflection.Assembly.GetAssembly(typeof(LiveSupport.LiveSupport)).GetName().Version.ToString() 
            <div style="float:right">
                <a href="http://www.twitter.com/moplig"><img alt="Follow moplig on Twitter" height="15" src="https://twitter-badges.s3.amazonaws.com/twitter-a.png"></a>&nbsp;
                <a href="https://plus.google.com/100199091477360088981?prsrc=3" style="text-decoration:none;"><img src="https://ssl.gstatic.com/images/icons/gplus-16.png" alt="" style="border:0;width:16px;height:16px;"/></a>&nbsp;

                <script type="text/javascript">
                   document.write('<g:plusone size="small" annotation="inline" width="120"></g:plusone>');
                </script>
                <!-- Place this tag where you want the +1 button to render 
                <g:plusone size="small" annotation="inline" width="120"></g:plusone>-->

                <!-- Place this render call where appropriate -->
