@{
    ViewBag.Title = ViewRes.Home.Index.Title;
    ViewBag.Description = ViewRes.Home.Index.Description;
}

@section Scripts{
    <script src="@Url.Content("~/Scripts/jquery.tools.min.js")" type="text/javascript"></script>    
    <link href="@Url.Content("~/Content/scrollable.css")" rel="stylesheet" type="text/css" />
    <script>
        $(function () {
            $(".scrollable").scrollable({ vertical: true, mousewheel: true }).navigator();
        });
    </script>
}
<div style="min-height:700px">
<div>
    <h2>@ViewRes.Home.Index.WelcomeText</h2>
</div>

<div style="float:right">
<div id="actions">
   <a class="prev">&laquo; Previous</a>
   <div class="navi"></div>
   <a class="next">Next &raquo;</a>
</div>

<!-- root element for scrollable -->
<div class="scrollable vertical">

   <!-- root element for the scrollable elements -->
   <div class="items">

      <!-- first element. contains three rows -->
      <div>

         <div class="item">
            <img src="/images/view/clientChatBox_small.png" alt="client chat box" />
            <h3>Simple uncluttered interface</h3>
            <p>
               Easy to use and intuitive client interface
            </p>
         </div>

         <div class="item">
            <img src="/images/view/multlingual.png" alt="multilingual support" />
            <h3>Multi language support </h3>
            <p>
               Fully supports any UTF-8 character set. 
               <br />Also the user interface is gradually being translated into several languages beginning with German and Bulgarian
            </p>

         </div>

         <div class="item">

            <h3>Multiple website support </h3>
            <p>
               The script may be integrated into several web sites - all supported by a single operator
            </p>

         </div>
      </div>

      <div>

         <div class="item">
            <img src="/images/view/client_disconnect.png" alt="Client disconnected"/>
            <h3>Automated chat state detection</h3>
            <p>
               Automatically discovers if a client has disconnected and provides fast feedback
            </p>
         </div>

         <div class="item">
            <img src="/images/view/chat_transcript.png" alt="Chat transcript" />
            <h3>5. Chat transcripts</h3>
            <p>
               Every chat session is logged and may be accessed at any time from the operator/ supervisor
            </p>
         </div>


         <div class="item">
            <img src="/images/view/canned_messages.png" alt="Pre-defined messages"/>
            <h3> Editable, pre-defined set of messages</h3>
            <p>
               Each supvervisor can define set of predefined messages for easy communication
            </p>
         </div>
      </div>
      <div>

         <div class="item">
            <img src="/images/view/visitor_data.png" alt="Visitor data" />
            <h3>Visitor details</h3>
            <p>
               Various information about the client is collected: IP, user agent, country, waiting time, referer page and so on
            </p>

         </div>
      </div>

   </div>

</div>
</div>

<h2>Features</h2>
<ul>
    <li>Simple uncluttered interface</li>
    <li>SSL secured</li>
    <li>Integration with Joomla CMS</li>
    <li>Web based operator console</li>
    <li>Suited for customer support services</li>
    <li>Easy to use</li>
    <li>Fast and responsive user interface</li>
    <li>Multi language support</li>
    <li>Multiple website support</li>
    <li>Automated chat state detection</li>
    <li>Chat transcripts</li>
    <li>Editable pre-defined set of messages</li>
    <li>Visitors details: IP, user agent, current page, country</li>
    <li>Monitoring of web site visitors</li>
    <li>Proactive invitation for chat</li>
    <li>Support for multiple operators and flexible security</li>
    <li>Chat with your visitors and make them customers</li>
    <li>much more...</li>
</ul>
<p>See complete list of all the @Html.ActionLink("features", "Features")</p>

<p>Register now for <strong>free</strong> @Html.ActionLink( "here", "Register", "Account")</p>

<div><img src="/images/RapidSSL_SEAL-90x50.gif" alt="RapidSSL"/></div>

</div>
